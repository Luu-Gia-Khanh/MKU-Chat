<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ProfileFragment"
    android:background="@color/color_actionbar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_profile"
        android:orientation="vertical"
        >
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:civ_border_width="@dimen/bottom_ellipsis_height"
            app:civ_border_color="@color/white"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_below="@+id/avt"
            android:layout_centerHorizontal="true"
            android:text="KhÃ¡nh"
            />
        <RelativeLayout
            android:id="@+id/content_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:background="@drawable/border_profile"
            >
            <TextView
                android:id="@+id/posts"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Post"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/followers"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:gravity="center"
                android:layout_toRightOf="@+id/posts"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/following"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/followers"
                android:text="Following"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/posts_num"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_below="@+id/posts"
                />
            <TextView
                android:id="@+id/followers_num"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:layout_toRightOf="@+id/posts_num"
                android:layout_below="@+id/followers"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="8dp"
                />
            <TextView
                android:id="@+id/following_num"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/followers_num"
                android:layout_below="@+id/following"
                android:text="1"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="8dp"
                />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/image_content_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_below="@+id/content_profile">
            <ImageView
                android:id="@+id/storage"
                android:src="@drawable/image_content_post"
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:layout_below="@+id/storage"
                android:layout_centerHorizontal="true"
                android:background="@color/black"
                android:layout_width="40dp"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingTop="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/image_content_img"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_view"
            android:padding="5dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/btnprofile"
                android:layout_width="150dp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn_profile"
                android:fontFamily="@font/poppins_medium"
                android:text="Edit Profile"
                android:textColor="#1566e0"
                android:layout_marginRight="10dp"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/btnlogout"
                android:layout_width="150dp"
                android:padding="10dp"
                android:layout_toRightOf="@+id/btnprofile"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn_profile"
                android:fontFamily="@font/poppins_medium"
                android:text="Log Out"
                android:gravity="center"
                android:textColor="#1566e0"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>